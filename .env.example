# ==============================================================================
# DATABASE
# ==============================================================================
MONGO_URL=mongodb://localhost:27017
DB_NAME=hire_app_db

# ==============================================================================
# SECURITY (JWT)
# ==============================================================================
# In production, run: openssl rand -hex 32
SECRET_KEY=dev-secret-key-change-this-in-production-12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
# 10080 minutes = 7 days (Good for mobile apps to prevent frequent logins)

# ==============================================================================
# AI SERVICES (Google Gemini)
# ==============================================================================
# Get a free key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================================================
# SERVER CONFIG
# ==============================================================================
DEBUG=True
PORT=8000
# Allow Expo Go (localhost) and typical emulator ports
CORS_ORIGINS=http://localhost:8081,http://localhost:19006,exp://localhost:19000