# Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Environment: development, staging, production, testing
ENVIRONMENT=development

# Security - REQUIRED IN PRODUCTION
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECURITY_SECRET_KEY=

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=hireapp
DATABASE_USER=hireapp_user
DATABASE_PASSWORD=your-secure-password-here
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# =============================================================================
# SERVER SETTINGS
# =============================================================================

HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false
DEBUG=false

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

LOGGING_LEVEL=INFO
LOGGING_JSON_FORMAT=true
LOGGING_REQUEST_ID_HEADER=X-Request-ID
LOGGING_CORRELATION_ID_HEADER=X-Correlation-ID

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_CORS_ORIGINS=["http://localhost:3000"]
SECURITY_RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# MATCHING ALGORITHM SETTINGS
# =============================================================================

MATCHING_SKILL_WEIGHT=0.4
MATCHING_EXPERIENCE_WEIGHT=0.4
MATCHING_LOCATION_WEIGHT=0.2
MATCHING_MATCH_THRESHOLD=0.5
MATCHING_BATCH_SIZE=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================

ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_RATE_LIMITING=true
