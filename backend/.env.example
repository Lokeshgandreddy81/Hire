# Backend environment â€” copy to .env
# Single source of configuration; app reads MONGO_* and SECRET_KEY only.

ENVIRONMENT=development
# In production: ENVIRONMENT=production and SECRET_KEY MUST be set (no default).

# Required in production. Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-from-env

# MongoDB (used by app; DATABASE_* vars are not used)
MONGO_URL=mongodb://localhost:27017
DB_NAME=hire_app_db

# Optional
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120
